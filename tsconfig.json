{
  "compilerOptions": {
    "target": "es2019",            
    "module": "commonjs",                               
    "esModuleInterop": true,      
    "allowJs": true,     
    "baseUrl": ".",                 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]  
}
