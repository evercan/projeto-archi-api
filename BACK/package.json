{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "start": "tsnd --transpile-only --respawn --ignore-watch node_modules src/main/server.ts",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules src/main/server.ts",
    "prepare": "husky install",
    "lint": "eslint src *.js",
    "test:unit": "jest --passWithNoTests --watch --runInBand -c jest-unit.config.js",
    "test:integration": "jest --passWithNoTests --watch --runInBand -c jest-integration.config.js",
    "test:staged": "jest --passWithNoTests --runInBand --findRelatedTests",
    "test:ci": "jest --passWithNoTests --runInBand --coverage",
    "test": "jest --runInBand ./test"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongodb": "^4.13.0",
    "mongoose": "^6.8.4",
    "rimraf": "^4.0.5",
    "uuidv4": "^6.2.13",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-boundaries": "^3.1.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "mongodb-memory-server": "^8.11.2",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "_moduleAliases": {
    "@": "src"
  }
}
